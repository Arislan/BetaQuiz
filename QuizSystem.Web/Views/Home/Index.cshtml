@model HomeQuizzesViewModel
<h1>Welcome to Quizzes</h1>

@if(Model.NewestQuizzes.Count() > 0)
{
    <h2>Newest Quizzes</h2>
    <hr />
    @Html.Partial("_HomeQuizzes", Model.NewestQuizzes)
    <h2>Top Rated Quizzes</h2>
    <hr />
    @Html.Partial("_HomeQuizzes", Model.MostRatedQuizzes)
}
else 
{
    <h2>Take a break, you already solved all Quizzes : )</h2>
}